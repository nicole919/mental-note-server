    "helmet": "^3.21.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^0.20.8",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "postgrator-cli": "^3.3.0",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.4",
